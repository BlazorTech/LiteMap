<CascadingValue Value="@CascadingValue" IsFixed="true">
    @ChildContent
    <BlazorTech.LiteMap.Internal.LiteMapPopup @ref="_liteMapPopup"/>
</CascadingValue>

@code {
    private LiteMapCascadingValue CascadingValue { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }

    private Internal.LiteMapPopup? _liteMapPopup;

    protected override void OnInitialized()
    {
        CascadingValue = new LiteMapCascadingValue
        {
                UpdateUI = () => _liteMapPopup.ForceUpdate()
        };
    }
}